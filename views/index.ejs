<div class="author">
  <h1 class="author__heading">Read & Sahre your Experiences</h1>
  
</div>

<img src="/img/main_img.png" class="hero-image" width="981" height="528">

<section class="articles">
  <h2 class="articles__heading">Latest Posts</h2>

  <ul class="article-ul">


    <% data.forEach(post=> { %>
      <li>
         
        <!-- link to post  -->
        <a href="/post/<%= post._id %>">

          <span>
            <%= post.title %>
          </span>
          <span class="article-list__date">
            <%= post.createdAt.toDateString() %>
          </span>
        </a>

      </li>
      <% }) %>


  </ul>


  <% if (nextPage !==null) { %>
    <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
    <% } %>






</section>